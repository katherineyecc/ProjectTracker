<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <TextView
        android:id="@+id/fixDescription"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Description: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixStatus" />

    <TextView
        android:id="@+id/descrption"
        android:layout_width="378dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixDescription" />

    <TextView
        android:id="@+id/fixStatus"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="Status: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixDueDate" />

    <TextView
        android:id="@+id/status"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fixStatus"
        app:layout_constraintTop_toBottomOf="@+id/dueDate" />

    <TextView
        android:id="@+id/fixDueDate"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="Due Date: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixInstructorName" />

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fixDueDate"
        app:layout_constraintTop_toBottomOf="@+id/instructorName" />

    <TextView
        android:id="@+id/fixInstructorName"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:text="Instructor Name:"
        app:layout_constraintBaseline_toBaselineOf="@+id/instructorName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/instructorName"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fixInstructorName"
        app:layout_constraintTop_toBottomOf="@+id/courseName" />

    <TextView
        android:id="@+id/fixCourseName"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="Course Name: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixProjectNo" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fixCourseName"
        app:layout_constraintTop_toBottomOf="@+id/projectNo" />

    <TextView
        android:id="@+id/fixProjectNo"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:text="Project No: "
        app:layout_constraintBaseline_toBaselineOf="@+id/projectNo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/projectNo"
        android:layout_width="232dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fixProjectNo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnModify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="123dp"
        android:text="Modify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="123dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnModify" />

</androidx.constraintlayout.widget.ConstraintLayout>